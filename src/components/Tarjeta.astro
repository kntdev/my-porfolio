---
export interface Props {
    imagen: string;
    titulo: string;
    link: string;
    parrafo: string;
}

const { imagen, titulo, link, parrafo } = Astro.props;
---

<div class="proyect container-pomodoro">
    <img class="img-proyect" src={imagen} alt="">
    <div class="text-proyect">
        <h4>{titulo}</h4>
        <p>{parrafo}</p>
        <a href={link} target="_blank">Link</a>
    </div>
</div>

<style>
    .img-proyect{
    width: 200px;
    height: 200px;
    object-fit: cover;
    margin-bottom: 30px;
}
.proyect{
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.9)),url(https://images.unsplash.com/photo-1516259762381-22954d7d3ad2?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1189&q=80);
    background-repeat: no-repeat;
    background-size: cover;
    /* border: 1px solid #000; */
    width: 60%;
    margin: auto;
    margin-top: 60px;
    padding: 50px;
    border-radius: 15px;
    flex-wrap: wrap;

    box-shadow: 0px 0px 40px 10px rgba(0,0,0,0.75);
    -webkit-box-shadow: 0px 0px 20px 5px rgba(0, 0, 0, 0.289);
    -moz-box-shadow: 0px 0px 40px 10px rgba(0,0,0,0.75);
}
.text-proyect{
    width: 400px;
    min-width: 200px;
    margin-inline: 20px;
    background-color: #e7e7e7e2;
    padding: 15px;
    border-radius: 15px;
}
.text-proyect h4{
    font-size: 24px;
    color: #2d2d2d;
}
.text-proyect p{
    color: #424242;
}
.text-proyect a{
    text-decoration: none;
    background-color: #045666c6;
    color: rgb(140, 243, 214);
    padding: 8px 20px;
    float: right;
    font-weight: bold;
    font-size: 18px;
    margin-top: 15px;
}
</style>