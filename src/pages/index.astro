---
import Sobremi from "../components/Sobremi.astro";
import Proyectos from "../components/Proyectos.astro";
import Layout from "../layouts/Layout.astro";
import Habilidades from "../components/Habilidades.astro";
import Contacto from "../components/Contacto.astro";
---

<Layout title="Porfolio - Santiago Rodriguez">
    <div class="header-info">
        <span class="logo">< KNTDEV /></span>
        <img class="perfil" src="/perfil.jpg" alt="Perfil-night">
        <h3>Front-End Developer <i class="fa-solid fa-code"></i></h3>
    </div>

    <main>

        <Sobremi/>
        <Proyectos/>
        <Habilidades/>
        <Contacto/>

    </main>

</Layout>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Crimson+Text&family=Manrope:wght@400;500;700&family=Martel:wght@700&display=swap');

    *{
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: 'Manrope', sans-serif;
    }

.header-info{
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 80px;
    color: #fff;
    font-size: 20px;
    background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.9)),
    url(https://images.unsplash.com/photo-1461749280684-dccba630e2f6?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1169&q=80);
    background-repeat: no-repeat;
    background-size: cover;
}
.logo{
    font-size: 2.2em;
    padding: 10px;
    border-radius: 10px;
    margin: 20px;
    background-color: #00000069;
    margin-top: 50px;
}
.perfil{
    height: 250px;
    width: 250px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid #fff;
    margin-bottom: 40px;
}

.titulo{
    font-size: 30px;
    font-weight: bold;
    text-align: center;
    padding-top: 30px;
    margin-top: 30px;
    margin-bottom: 60px;
}

.bg{
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    z-index: -1;
    filter: brightness(35%);
}
.perfil{
    height: 250px;
    width: 250px;
    object-fit: cover;
    border-radius: 50%;
    border: 2px solid #fff;
}
.items{
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    list-style: none;
    padding: 7px;
}
.item{
    margin: 7px;
    font-size: 20px;
    font-weight: bold;
    padding: 10px;
    transition: 300ms ease-out background-color;
    cursor: pointer;
    background: rgb(235, 235, 235);
    color: rgb(32, 32, 32);
    border-radius: 10px;
}
.item a{
    text-decoration: none;
    color: unset;
}
.item:hover{
    background-color: #fff;
    color: #000;
    transition: 300ms ease-out background-color;
}


/*///////////////////////////////////*/



.contenedor-form{
    background-color: #fff;
    width: 60%;
    margin: auto;
    max-width: 400px;
    min-width: 240px;
    border-radius: 1em;
    padding: 3.5em 1.5em;
    margin-bottom: 34px;
}
.formulario{
    width: 100%;
    display: grid;
    gap: 1em;
    grid-auto-columns: 100%;
}
.form-input{
    font-size: 1rem;
    padding: .8em 1em;
    outline: none;
    border: 1px solid #bbb0b0;
    border-radius: 0.2em;
}
.form-input-msg{
    resize: none;
    padding: 1.8em 1em;
    margin-bottom: .5em;
}
.btn-form{
    font-size: 1rem;
    background-color: #089;
    color: #fff;
    border: none;
    font-weight: 800;
    padding: .7em 0;
    border-radius: .2em;
    cursor: pointer;
    transition: 300ms ease-out background-color;
}
.btn-form:hover{
    background-color: rgb(89, 198, 212);
    transition: 300ms ease-out background-color;
}
/*/////////////////////////////*/

.contact-boxes{
    background-color: rgb(0, 125, 153);
    display: flex;
    flex-wrap: wrap;
    width: 60%;
    max-width: 480px;
    justify-content: center;
    padding: 10px;
    border-radius: 15px;
    margin: auto;
    margin-bottom: 40px;
}
.conct-box{
    margin: 15px;
    font-size: 20px;
    background-color: #e1e1e1;
    transition: 300ms ease-out background-color;
}
.conct-box:hover{
    background-color: #ffffff;
    transition: 300ms ease-out background-color;
}
.btn-box{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: end;
    width: 100px;
    height: 100px;
    color: rgb(0, 125, 153);
    text-decoration: none;
    padding: 4px;
}
.btn-box i{
    font-size: 30px;
}
.navbar{
    background-color: #a8a8a8;
}
.navfooter{
    background-color: rgb(0, 125, 153);
}
/*/////////////////////////////*/

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type=number] {
  -moz-appearance: textfield;
}

</style>